{
  "name": "gonftme",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "hardhat compile",
    "deploy:base": "hardhat run scripts/deploy.js --network base",
    "deploy:base-sepolia": "hardhat run scripts/deploy.js --network base-sepolia",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contracts": "hardhat test",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:lint": "eslint . --ext .ts,.tsx,.js,.jsx --config config/eslint.config.security.js",
    "security:deps": "npm audit && npm outdated",
    "sonar:scan": "sonar-scanner",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "e2e:ui": "playwright test --ui",
    "e2e:cucumber": "cucumber-js --config config/cucumber.config.js",
    "e2e:cucumber:headed": "HEADLESS=false cucumber-js --config config/cucumber.config.js",
    "e2e:report": "playwright show-report reports/playwright-report",
    "test:e2e": "npm run e2e",
    "test:e2e:headed": "npm run e2e:headed",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network base",
    "deploy:staging": "hardhat run scripts/deploy.js --network base-sepolia",
    "vercel:build": "npm run build",
    "vercel:dev": "npm run dev",
    "prepare:staging": "npm run lint && npm run type-check && npm run test",
    "prepare:production": "npm run prepare:staging && npm run security:audit",
    "setup:deployment": "node scripts/setup-deployment.js",
    "update:vercel": "node scripts/update-vercel-api.js",
    "deploy:auto": "echo 'Set VERCEL_TOKEN environment variable first' && VERCEL_TOKEN=$VERCEL_TOKEN npm run deploy:base-sepolia"
  },
  "dependencies": {
    "@coinbase/onchainkit": "^0.34.0",
    "@coinbase/wallet-sdk": "^4.0.4",
    "@openzeppelin/contracts": "^5.1.0",
    "@tanstack/react-query": "^5.59.16",
    "axios": "^1.7.7",
    "clsx": "^2.1.1",
    "connectkit": "^1.8.2",
    "ethers": "^6.13.4",
    "lucide-react": "^0.456.0",
    "next": "^15.0.3",
    "next-auth": "^4.24.11",
    "react": "^18",
    "react-dom": "^18",
    "react-hot-toast": "^2.4.1",
    "tailwind-merge": "^2.5.4",
    "viem": "^2.21.19",
    "wagmi": "^2.12.17",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.1.0",
    "@cucumber/pretty-formatter": "^2.1.0",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@playwright/test": "^1.54.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.20",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^9",
    "eslint-config-next": "^15.0.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "hardhat": "^2.22.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "playwright-bdd": "^8.3.1",
    "postcss": "^8",
    "tailwindcss": "^3.4.14",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  },
  "type": "module"
}
